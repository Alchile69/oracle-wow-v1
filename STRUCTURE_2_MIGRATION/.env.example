# Oracle Portfolio - Variables d'environnement
# Architecture: Firebase + Vite + Cloud Run

# =============================================================================
# CONFIGURATION GÉNÉRALE
# =============================================================================
ENVIRONMENT=development
APP_NAME=Oracle Portfolio
APP_VERSION=2.7.0
LOG_LEVEL=info

# =============================================================================
# FRONTEND (Vite + React)
# =============================================================================
# URL de l'API backend
VITE_API_URL=http://localhost:8080

# Configuration de l'application
VITE_APP_NAME=Oracle Portfolio
VITE_APP_VERSION=2.7.0
VITE_ENVIRONMENT=development

# URLs des services
VITE_FRONTEND_URL=http://localhost:5173
VITE_BACKEND_URL=http://localhost:8080

# Configuration des fonctionnalités
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_MONITORING=false
VITE_DEBUG_MODE=true

# =============================================================================
# BACKEND (Python FastAPI)
# =============================================================================
# Configuration du serveur
PORT=8080
HOST=0.0.0.0
WORKERS=1

# Base de données
DATABASE_URL=postgresql://oracle_user:oracle_password@localhost:5432/oracle_portfolio

# Cache Redis
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Configuration des modules Python
ENABLE_ECONOMIC_REGIMES=true
ENABLE_BACKTESTING=true
ENABLE_PERFORMANCE_ANALYSIS=true

# Limites et quotas
MAX_REQUESTS_PER_MINUTE=1000
MAX_BACKTEST_DURATION_DAYS=3650
MAX_PORTFOLIO_POSITIONS=100

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
# Configuration Firebase (remplacer par vos vraies valeurs)
FIREBASE_PROJECT_ID=oracle-portfolio-prod
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=oracle-portfolio-prod.firebaseapp.com
FIREBASE_DATABASE_URL=https://oracle-portfolio-prod-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=oracle-portfolio-prod.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abcdef123456

# Firebase Functions
FIREBASE_FUNCTIONS_URL=https://us-central1-oracle-portfolio-prod.cloudfunctions.net

# Clés de service Firebase (pour le backend)
FIREBASE_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json

# =============================================================================
# GOOGLE CLOUD CONFIGURATION
# =============================================================================
# Projet Google Cloud
GOOGLE_CLOUD_PROJECT=oracle-portfolio-prod
GOOGLE_CLOUD_REGION=us-central1

# Cloud Run
CLOUD_RUN_SERVICE_NAME=oracle-backend
CLOUD_RUN_MEMORY=1Gi
CLOUD_RUN_CPU=1
CLOUD_RUN_MAX_INSTANCES=10
CLOUD_RUN_MIN_INSTANCES=0

# Cloud Storage
GOOGLE_CLOUD_STORAGE_BUCKET=oracle-portfolio-storage

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
# Configuration Firebase (remplacer par vos vraies valeurs)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=oracle-portfolio-prod.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=oracle-portfolio-prod
VITE_FIREBASE_STORAGE_BUCKET=oracle-portfolio-prod.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef123456

# Firebase Functions
VITE_FIREBASE_FUNCTIONS_URL=https://us-central1-oracle-portfolio-prod.cloudfunctions.net

# Clés de service Firebase (pour le backend)
FIREBASE_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json

# Configuration Firestore
FIRESTORE_COLLECTION_PREFIX=prod
FIRESTORE_ENABLE_OFFLINE=true
FIRESTORE_CACHE_SIZE_BYTES=40000000

# =============================================================================
# AUTHENTIFICATION
# =============================================================================
# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# OAuth Providers (optionnel)
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret

# =============================================================================
# SERVICES EXTERNES
# =============================================================================
# APIs de données financières
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
YAHOO_FINANCE_API_KEY=your_yahoo_finance_api_key
QUANDL_API_KEY=your_quandl_api_key

# Services de notification
SENDGRID_API_KEY=your_sendgrid_api_key
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# =============================================================================
# MONITORING ET ANALYTICS
# =============================================================================
# Sentry pour le monitoring d'erreurs
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# Google Analytics
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Monitoring personnalisé
MONITORING_ENDPOINT=https://your-monitoring-service.com/api/metrics
MONITORING_API_KEY=your_monitoring_api_key

# =============================================================================
# SÉCURITÉ
# =============================================================================
# CORS Configuration
CORS_ORIGINS=http://localhost:5173,https://oracle-portfolio.vercel.app
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# =============================================================================
# DÉVELOPPEMENT LOCAL
# =============================================================================
# Configuration pour Docker Compose
COMPOSE_PROJECT_NAME=oracle-portfolio
COMPOSE_FILE=docker-compose.yml

# Base de données locale
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=5432
LOCAL_DB_NAME=oracle_portfolio
LOCAL_DB_USER=oracle_user
LOCAL_DB_PASSWORD=oracle_password

# Redis local
LOCAL_REDIS_HOST=localhost
LOCAL_REDIS_PORT=6379

# =============================================================================
# DÉPLOIEMENT
# =============================================================================
# Vercel (Frontend)
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id

# Google Cloud (Backend)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Docker Registry
DOCKER_REGISTRY=gcr.io
DOCKER_IMAGE_NAME=oracle-backend
DOCKER_TAG=latest

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Fonctionnalités expérimentales
ENABLE_BETA_FEATURES=false
ENABLE_AI_RECOMMENDATIONS=false
ENABLE_REAL_TIME_SYNC=true
ENABLE_OFFLINE_MODE=false

# Modules optionnels
ENABLE_CRYPTO_ANALYSIS=false
ENABLE_OPTIONS_TRADING=false
ENABLE_SOCIAL_FEATURES=false

# =============================================================================
# PERFORMANCE
# =============================================================================
# Cache Configuration
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=1000

# Database Connection Pool
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_POOL_TIMEOUT=30

# Request Timeout
REQUEST_TIMEOUT=30
LONG_REQUEST_TIMEOUT=300

# =============================================================================
# NOTES IMPORTANTES
# =============================================================================
# 1. Copiez ce fichier vers .env et remplacez les valeurs par les vraies
# 2. Ne commitez JAMAIS le fichier .env avec de vraies clés
# 3. Utilisez des clés différentes pour chaque environnement
# 4. Générez des clés sécurisées pour la production
# 5. Activez la rotation des clés en production

